<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.profile.ProfileFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_profile_pic"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_profile_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_base_profile_pic" />

    </com.google.android.material.card.MaterialCardView>

    <EditText
        android:id="@+id/edit_text_name"
        android:hint="@string/name_text"
        android:layout_marginTop="24dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@id/card_view_profile_pic"
        app:layout_constraintStart_toStartOf="@id/card_view_profile_pic"
        app:layout_constraintTop_toBottomOf="@id/card_view_profile_pic" />

    <EditText
        android:id="@+id/edit_text_phone_number"
        android:layout_marginTop="24dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/phone_number_text"
        app:layout_constraintEnd_toEndOf="@id/edit_text_name"
        app:layout_constraintStart_toStartOf="@id/edit_text_name"
        app:layout_constraintTop_toBottomOf="@id/edit_text_name" />

    <EditText
        android:id="@+id/edit_text_telegram"
        android:layout_marginTop="24dp"
        android:layout_width="160dp"
        android:hint="@string/telegram_text"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@id/edit_text_phone_number"
        app:layout_constraintStart_toStartOf="@id/edit_text_phone_number"
        app:layout_constraintTop_toBottomOf="@id/edit_text_phone_number" />

    <EditText
        android:id="@+id/edit_text_instagram"
        android:hint="@string/instagram_text"
        android:layout_marginTop="24dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@id/edit_text_telegram"
        app:layout_constraintStart_toStartOf="@id/edit_text_telegram"
        app:layout_constraintTop_toBottomOf="@id/edit_text_telegram" />

    <Button
        android:id="@+id/button_update_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_profile_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>