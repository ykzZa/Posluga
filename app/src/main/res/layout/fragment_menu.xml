<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.menu.MenuFragment">

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/red" />

    <TextView
        android:id="@+id/text_view_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Welcome to Posluga!"
        android:textColor="@color/dark_grey"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/image_view_logo"
        app:layout_constraintTop_toBottomOf="@id/image_view_logo" />


    <TextView
        android:id="@+id/text_view_advice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/advice"
        app:layout_constraintBottom_toTopOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        app:layout_constraintStart_toStartOf="@id/login_button"
        app:layout_constraintTop_toBottomOf="@id/text_view_welcome" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:elevation="4dp"
        android:text="@string/login"
        app:layout_constraintBottom_toTopOf="@id/scroll_view_options"
        app:layout_constraintTop_toBottomOf="@id/text_view_advice" />

    <ScrollView
        android:id="@+id/scroll_view_options"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_profile"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/my_profile"
                android:textColor="@color/dark_grey"
                android:textSize="18sp"
                android:visibility="gone" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_service"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/my_services"
                android:textColor="@color/dark_grey"
                android:textSize="18sp"
                android:visibility="gone" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_created_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_projects"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/my_projects"
                android:textColor="@color/dark_grey"
                android:textSize="18sp"
                android:visibility="gone" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_created_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_participating_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_participating_projects"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/participating_projects"
                android:textColor="@color/dark_grey"
                android:textSize="18sp"
                android:visibility="gone" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_participating_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="gone" />


            <Button
                android:id="@+id/button_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_settings"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/settings"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/button_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_about"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/about"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_logout"
                android:drawableTint="@color/red"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/logout"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>