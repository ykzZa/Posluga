<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuFragment">


    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Posluga"
        android:fontFamily="@font/nunitosans_7pt_extra_bold_italic"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_subtitle"
        android:text="post and find"
        android:textSize="16sp"
        android:fontFamily="@font/nunitosans_7pt_black_italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scroll_view_options"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_subtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_profile"
                android:gravity="start|center"
                android:fontFamily="@font/nunitosans_7pt_bold"
                android:paddingVertical="16dp"
                android:text="@string/profile_text"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:visibility="visible" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_service"
                android:gravity="start|center"
                android:fontFamily="@font/nunitosans_7pt_bold"
                android:paddingVertical="16dp"
                android:text="@string/my_services_text"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:visibility="visible" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_created_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_projects"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:fontFamily="@font/nunitosans_7pt_bold"
                android:text="@string/my_projects_text"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:visibility="visible" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_created_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_settings"
                android:gravity="start|center"
                android:fontFamily="@font/nunitosans_7pt_bold"
                android:paddingVertical="16dp"
                android:text="@string/settings_text"
                android:textColor="@color/light_black"
                android:textSize="18sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/button_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_about"
                android:gravity="start|center"
                android:fontFamily="@font/nunitosans_7pt_bold"
                android:paddingVertical="16dp"
                android:text="@string/about_text"
                android:textColor="@color/light_black"
                android:textSize="18sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_logout"
                android:drawableTint="@color/red"
                android:fontFamily="@font/nunitosans_7pt_bold"
                android:gravity="start|center"
                android:paddingVertical="16dp"
                android:text="@string/logout_text"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/nunitosans_7pt_extra_bold"
                android:text="@string/sign_in_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>